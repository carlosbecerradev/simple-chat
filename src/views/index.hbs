<div class="global-chat">
    <div class="chat-users">
        <div class="chat-users--search rounded">
            <form id="searchUser">
                <div class="form-control-inline">
                    <div class="form-control-inline--icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <input id="searchUserInput" type="search" class="form-control-inline--input" placeholder="Search contact">
                </div>
            </form>
        </div>
        <div class="chat-users--list rounded" >
            <div class="chat-users--list-scroll">
                <div class="chat-user hover-item">
                    <div class="chat-user-img">
                        <img src="img/profile1.jpg" alt="">
                    </div>
                    <div class="chat-user-info">
